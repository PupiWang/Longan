<h1>User register</h1>
<%= form_for :user, url: users_path, html: {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :email, "Email", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, "Password", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirm, "Password confirm", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirm, class: "form-control", placeholder: "Password confirm" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, "User name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "User name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :telephone, "Phone number", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.phone_field :telephone, class: "form-control", placeholder: "Phone number" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>
    </div>

<% end %>